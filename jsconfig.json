{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "contexts/*": ["src/contexts/*"],
      "hooks/*": ["src/hooks/*"],
      "layouts/*": ["src/layouts/*"],
      "routes/*": ["src/routes/*"],
      "services/*": ["src/services/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"]
}
